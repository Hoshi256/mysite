{% extends 'base.html.twig' %}

{% block title %}Register{% endblock %}
{% block body %}

<div class="login_register_wrap section">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-xl-6 col-md-10">
                <div class="login_wrap">
                    <div class="padding_eight_all bg-white">
                        <div class="heading_s1">
                            <h3>Register</h3>
                        </div>
                        <div class="message-flash">
                            {% for flashError in app.flashes('verify_email_error') %}
                                <div class="alert alert-danger" role="alert">{{ flashError }}</div>
                            {% endfor %}
                        </div>
                        {{ form_start(registrationForm) }}

                        <div class="form-row">
                             <div class="col-md-6">{{ form_row(registrationForm.first_name) }}</div>
                             <div class="col-md-6">{{ form_row(registrationForm.last_name) }}</div>

                        </div>

                         <div class="form-group">
                                    <div class="col-md-6">{{ form_row(registrationForm.email) }}</div>
                             <div class="col-md-6">{{ form_row(registrationForm.image) }}</div>
                        </div>

                         <div class="form-group">
                                {{ form_row(registrationForm.plainPassword, {
                                     label: 'Password'
                                }) }}

                                {{ form_row(registrationForm.agreeTerms) }}
                            <div class="form-group">
                                <button type="submit" class="btn btn-fill-out btn-block" name="register">Valider</button>
                            </div>
                            <div class="form-note text-center">You have already a count??<a href="{{ path('app_login')}}">Se connecter maintenant</a></div>

                            <input type="hidden" id="form_captcha" name="form[captcha]" /><script>
    var recaptchaCallback_form_captcha = function() {
    grecaptcha.execute('<6LdPFuAkAAAAAApHk0zWwlUVW3D8Y1gRE3BN6tiD>', {action: 'landing'}).then(function(token) {
    document.getElementById('form_captcha').value = token;
    });
    };
    </script><script src="https://www.google.com/recaptcha/api.js?render=<6LdPFuAkAAAAAApHk0zWwlUVW3D8Y1gRE3BN6tiD>&onload=recaptchaCallback_form_captcha" async defer></script> 
                        {{ form_end(registrationForm) }}

                        </div>
                            
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}

