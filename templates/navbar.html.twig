{% endblock %}

{% block navbar %}
    <nav class="navbar navbar-expand-lg navbar-light bg-light navbar-blue">
        <a class="navbar-brand" href="app_home">Logo</a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarNav">
            <ul class="navbar-nav">
                <li class="nav-item active">
                    <a class="nav-link" href="{{ path('app_home') }}">Home <span class="sr-only">(current)</span></a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="#">LAST MINUTE</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="{{ path('app_contact') }}">CONTACT US</a>
                </li>
               
                {# {{ dump(app.session) }}; #}
            {{app.session.get('cartCount')}}


                <li class="nav-item dropdown">
        <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
          My count
        </a>
        <div class="dropdown-menu" aria-labelledby="navbarDropdown">


        
          <a class="dropdown-item" href="{{ path('app_login') }}">Login</a>
          <a class="dropdown-item" href="{{ path('app_register') }}">Register</a>
          {% if app.user %}
          <a class="dropdown-item" href="{{ path('app_back_office_user') }}">My commands</a>
          {% endif %}          

         
      </li>


                 <li class="nav-item">
              
                 {% set cartCount = app.request.get('cartCount') %}
                    <a class="nav-link text-white" href="{{ path('app_cart') }}">
                     <i class="fas fa-shopping-cart"></i>
                                      {% set cartCount = app.request.get('cartCount') %}

                    {% if cartCount > 0 %}({{ cartCount }}){% endif %}
    </a>
                    </a>
                  
                </li>
                {% if app.user %}
        <li class="nav-item">
          <p class="nav-link">Hello, {{ app.user.FirstName }}</p>
        </li>
        <li class="nav-item">
          <img src="./my-avatar2.jpg" alt="">
        </li>


        <li class="nav-item">
          <a class="nav-link" href="{{ path('app_logout') }}" id="logout-link"><button>Logout</button></a>
        </li>
        {% elseif app.request.attributes.get('_route') != 'app_login' and app.request.attributes.get('_route') != 'app_register' %}
        {# <li class="nav-item">
          <a class="nav-link" href="{{ path('app_login') }}" id="login-link"><button>Login</button></a>
        </li>
        <li class="nav-item">
          <a class="nav-link" href="{{ path('app_register') }}" id="register-link"><button>Register</button></a>
        </li> #}
        {% endif %}


            </ul>
        </div>
    </nav>

