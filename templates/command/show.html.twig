{% extends 'base.html.twig' %}

{% block title %}Command{% endblock %}

{% block body %}
    <h1>Command</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ command.id }}</td>
            </tr>
            <tr>
                <th>Date</th>
                <td>{{ command.date ? command.date|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Price</th>
                <td>{{ command.price }}</td>
            </tr>
            <tr>
                <th>Quantity</th>
                <td>{{ command.quantity }}</td>
            </tr>
            <tr>
                <th>Status</th>
                <td>{{ command.status ? 'Yes' : 'No' }}</td>
            </tr>
            <tr>
                <th>Total</th>
                <td>{{ command.total }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_command_index') }}">back to list</a>

    <a href="{{ path('app_command_edit', {'id': command.id}) }}">edit</a>

    {{ include('command/_delete_form.html.twig') }}
{% endblock %}
