{% extends 'base.html.twig' %}

{% block title %}Booking{% endblock %}

{% block body %}
    <h1>Booking</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ booking.id }}</td>
            </tr>
            <tr>
                <th>DateIn</th>
                <td>{{ booking.dateIn ? booking.dateIn|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>DateOut</th>
                <td>{{ booking.dateOut ? booking.dateOut|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Price</th>
                <td>{{ booking.price }}</td>
            </tr>
            <tr>
                <th>NbPerson</th>
                <td>{{ booking.nbPerson }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_booking_crud_index') }}">back to list</a>

    <a href="{{ path('app_booking_crud_edit', {'id': booking.id}) }}">edit</a>

    {{ include('booking_crud/_delete_form.html.twig') }}
{% endblock %}
