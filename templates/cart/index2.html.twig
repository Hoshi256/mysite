{% extends 'base.html.twig' %}

{% block title %}Hello {% endblock %}

{% block body %}


<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="example-wrapper">
   <div class="bg-light p-3">
   <h1>You cart</h1>
   </div>


{% if items | length > 0 %}
   <table class="table">
   <thead>
    <tr>
        <th>Product</th>
        <th>Price</th>
        <th>Quantity</th>
        <th>Total</th>
        <th>Remove</th>
    </tr>
   </thead>
   <tbody>
  

   {% for item in items %}
    <tr>
        <td>{{ item.product.name }}</td>
        <td>{{ item.product.price }}</td>
        <td>{{ item.quantity}}</td>
        <td>{{ item.product.price * item.quantity }}</td>
        <td>
        <a href="{{ path('cart_remove', {'id': item.product.id})}}" class="btn btn-danger btn-sm"></a>
        <i class="fas fa-trash"></i>
        </td>
    </tr>
   {% endfor %}
   </tbody>
   
   <tfoot>
   <tr>
    <td colspan="3" class="text-right">Total: </td>
    <td>{{ total}}</td>
    <td></td>
   </tr>
   </tfoot>

 
   </table>

        <div class="continue">
     <p><a class="btn btn-fill-out" href="{{ path('app_home')}}">Poursuivre vos achats</a></p>

                       {% if app.user %}

  <div class="paynow">

   <a href="{{ path('app_stripe')}}" class="btn btn-succes btn-sm">Pay now</a>

   </div>
        
        
        
        
                           {% else %}

     <div class="paynow">
     <p><a class="btn btn-fill-out" href="{{ path('app_login')}}">Login ou register you</a></p>

      </div>                    

                              {% endif %}

    
{% else %}
<div>
  <p>You cart is empty</p>

</div>

    
{% endif %}







{% endblock %}
