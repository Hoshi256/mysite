


{% extends 'base.html.twig' %}

{% block body %}

<style>

.card-body span {
    color: red;
}
.card-img-top {
    transition: transform 0.5s ease;
    height: 200px;
    object-fit: cover;
}

.card-img-top:hover {
    transform: scale(1.2);
}

.card {
    border: none;
    box-shadow: 0px 0px 10px 0px rgba(0,0,0,0.2);
}

.card-title {
    font-size: 1.25rem;
}

.card-text {
    margin-top: 1rem;
    margin-bottom: 2rem;
    font-size: 1rem;
}

.card-price {
    font-size: 1.25rem;
    font-weight: bold;
}
</style>

<div class="container">
    <h1 class="mt-3 mb-4">Products</h1>
    <div class="row">
        {% for product in products %}
            <div class="col-md-4 mb-4">
                <div class="card">
                    <img class="card-img-top" src="{{ app.request.getBaseURL() }}/ulpoads/{{ product.image }}" alt="{{ product.name }}">
                    <div class="card-body">
                        <h5 class="card-title">{{ product.name }}</h5>
                        <p class="card-text">{{ product.description }}</p>
                        <div class="d-flex justify-content-between align-item-center">
    <a href="{{ path('app_product_controller_crud_show', {'id': product.id}) }}" class="btn btn-dark">View details</a>
    <span class="h5 mt-auto"><span class="price">{{ product.price }}</span> â‚¬</span>
</div>

                        
                    </div>
                </div>
            </div>
        {% endfor %}
    </div>
</div>

{% endblock %}
