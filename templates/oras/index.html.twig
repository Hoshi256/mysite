{% extends 'base.html.twig' %}

{% block title %}Oras index{% endblock %}

{% block body %}
    <h1>Oras index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Populatie</th>
                <th>Imagine</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for ora in oras %}
            <tr>
                <td>{{ ora.id }}</td>
                <td>{{ ora.name }}</td>
                <td>{{ ora.populatie }}</td>
                <td>{{ ora.imagine }}</td>
                <td>
                    <a href="{{ path('app_oras_show', {'id': ora.id}) }}">show</a>
                    <a href="{{ path('app_oras_edit', {'id': ora.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_oras_new') }}">Create new</a>
{% endblock %}
